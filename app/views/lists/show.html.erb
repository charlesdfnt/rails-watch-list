<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <h1 class="mb-3 text-center">All my <%= @list.name %> movies!</h1>
      <p class="lead text-center text-muted mb-5">
        Only la cr√®me de la cr√®me üç®
      </p>

      <div class="row g-4">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %> poster">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= bookmark.movie.title %></h5>
                <p class="card-text small text-muted">
                  <%= bookmark.movie.overview.truncate(120) %>
                </p>
                <p class="card-text">
                  <small class="text-muted">‚≠êÔ∏è Rating: <%= bookmark.movie.rating %>/10</small>
                </p>
                <%= link_to "Delete", bookmark_path(bookmark),
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                            class: "btn btn-sm btn-outline-danger mt-auto" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-5">
        <%= link_to "‚ûï Add a movie", new_list_bookmark_path(@list), class: "btn btn-success me-2" %>
        <%= link_to "‚Üê Back to all lists", lists_path, class: "btn btn-outline-secondary" %>
      </div>

    </div>
  </div>
</div>
