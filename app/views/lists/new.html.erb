<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4 text-center">Create your list</h1>

      <div class="card shadow-sm">
        <div class="card-body">
          <%= simple_form_for @list do |f| %>
            <%= f.input :name, label: "List name", input_html: { class: "form-control" } %>
            <div class="text-center mt-4">
              <%= f.button :submit, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-center mt-4">
        <%= link_to "â† Back to all lists", lists_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
